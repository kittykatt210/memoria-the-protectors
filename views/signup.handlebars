<h2>Sign-Up</h2>

<form class="center signup-form">
  <div class="input-text">
    <label for="name-signup">username:</label>
    <input type="text" id="name-signup" />
  </div>
  <div class="input-text">
    <label for="email-signup">email:</label>
    <input type="text" id="email-signup" />
  </div>
  <div class="input.text">
    <label for="password-signup">password:</label>
    <input type="password" id="password-signup" />
  </div>
  <div>
    <button class="login-btn" type="submit">submit</button><span>
  </div>
</form>

<script type="application/javascript" src="/js/signup.js"></script>