<h2>Login</h2>

<form class=" center login-form">
  <div class="input-text">
    <label for="username-login">username:</label>
    <input type="text" id="username-login" name="username-login" />
  </div>
  <div class="input-text">
    <label for="password-login">password:</label>
    <input type="password" id="password-login" name="password-login"/>
  </div>
  <div>
    <button class="login-btn" type="submit">login</button><span> or </span> <a href="/signup">create an account</a>
  </div>
</form>

<script src="/js/login.js"></script>
